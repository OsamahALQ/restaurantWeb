  title Order Details 
.topnav
  a(href='/') Home
  a(href='/users') Users
  if !authenticated
    a(href='/sign_in') Sign In
    a(href='/sign_up') Sign Up
  else 
    a(href='/order') Order
    a(href='/profile') Profile
    a(href='/logout') Logout
body.img0
div.middle
  h2(style='font-size: 50; text-align: center; vertical-align: middle; margin-top: 15%;') Order details
  if error_message
    #error_message.alert.alert-warning.error_message
      strong ERROR!
      |  #{error_message}
  if success_message
    #success_message.alert.alert-success.error_message
      strong Success!
      |  #{success_message}
  div
    if order
      each elem,i in order
        div(style='text-align: center; vertical-align: middle;') #{i} - !{elem}
    else 
      strong No Orders Yet